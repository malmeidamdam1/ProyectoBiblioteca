<Window x:Class="ProyectoBiblioteca.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:ProyectoBiblioteca"
        Title="MainWindow" Height="500" Width="1000" ResizeMode="NoResize"  >

    <Grid Background="#354e68">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>


        <Image Source="Images\logoBiblioteca.jpg" Stretch="Uniform" Margin="0,20,0,0" VerticalAlignment="Top" Height="75" Width="120"/>


        <ListBox Grid.Column="0" x:Name="sidebar" Margin="0,110,0,50" BorderThickness="0" Background="#354e68">
            <local:NavButton Margin="3" Padding="6" Icon="/Images/logoBiblioteca.jpg"/>
            <local:NavButton Margin="3" Padding="6" Icon="/Images/logoBiblioteca.jpg"/>
            <local:NavButton Margin="3" Padding="6" Icon="/Images/logoBiblioteca.jpg"/>
            <local:NavButton Margin="3" Padding="6" Icon="/Images/logoBiblioteca.jpg"/>
            <!--<local:NavButton Navlink="/Pages/Page2.xaml" Margin="3" Padding="6" Icon="/Assets/Icono2.png"/>-->
        </ListBox>

        <!-- Línea de separación -->
        <Border Grid.Column="0" BorderBrush="#022038" BorderThickness="0,0,5,0" VerticalAlignment="Stretch"/>

        <!-- Parte principal -->

        <Frame Grid.Column="1" x:Name="navFrame" Background="#022038" >

        </Frame>

    </Grid>
</Window>
